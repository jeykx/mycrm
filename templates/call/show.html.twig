{% extends 'base.html.twig' %}

{% block title %}Call{% endblock %}

{% block body %}
    <h1>Call</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ call.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ call.date ? call.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ call.hour ? call.hour|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ call.comment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('call_index') }}">back to list</a>

    <a href="{{ path('call_edit', {'id': call.id}) }}">edit</a>

    {{ include('call/_delete_form.html.twig') }}
{% endblock %}
