<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lumen/bootstrap.min.css">
            {{ encore_entry_link_tags('app') }}

        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    {% if app.user %}
      <li class="nav-item">
        <a class="nav-link" href="/">Accueil</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Gestion formation
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="/service/new">Les spécialités</a>
          <a class="dropdown-item" href="/teacher">Gestion des formateurs</a>
      </li>

      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Gestion commerciale
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="/call">Appel des prospects</a>
            <a class="dropdown-item" href="/client">Création de profil étudiant</a>
            <a class="dropdown-item" href="/inscription">Gestion des étudiants</a>
            <a class="dropdown-item" href="/status">Gestion des statuts</a>
      </li>
    </ul>

    {% else %}

    <li class="nav-item">
        <a class="nav-link" href="/client/new">Accueil</a>
      </li>
      <li>
        <a class="nav-link" href="/documentation">Demande de documentation</a>
      </li>
    </ul>
      {% endif %}
    <form class="form-inline my-2 my-lg-0">
    {% if app.user %}

      Bonjour {{ app.user.username }}, <a class="nav-link" href="/logout">Deconnexion</a>

    {% else %}

      <a class="nav-link" href="/">Connexion</a>
      <a class="nav-link" href="/register">Inscription</a>
    {% endif %}
    </form>
  </div>
</nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        {{ encore_entry_script_tags('app') }}


</script>{% endblock %}
    </body>
</html>
